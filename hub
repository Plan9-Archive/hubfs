#!/bin/rc
# wrapper script for hubfs and noteshell - starts both servers and clients
# hub [srvname] [shellname]

rfork enf
while (~ $1 -*){
	switch($1){
	case -b
		background = yes
		shift
	case -t
		trunc = yes
		shift
	case *
		echo bad flag $1
		shift
	}
}
srvname = $1
attach = $2
if(~ $srvname ''){
	srvname = hubfs
}
if(~ $attach ''){
	attach = io
}

if (test -e /n/$srvname/$attach'0'){
#	echo attaching noteshell to $srvname/$attach hubgroup
	noteshell /n/$srvname/$attach
	echo noteshell ended
	exit ''
}

if (test -e /n/$srvname/io0){
	touch /n/$srvname/$attach'0'
	touch /n/$srvname/$attach'1'
	touch /n/$srvname/$attach'2'
	touch /n/$srvname/$attach^0.note
#	rfork
#	echo created /$srvname/$attach hubgroup and starting initial rc
	oldprompt = $prompt
	prompt =($attach'% ')
	rc -i </n/$srvname/$attach'0' >/n/$srvname/$attach'1' >[2]/n/$srvname/$attach'2' &
	cat /n/$srvname/$attach^0.note >/proc/$apid/notepg &
#	prompt = $oldprompt
#	rfork
	if(! ~ $background yes){
		sleep 1
#		echo attaching noteshell to $srvname/$attach hubgroup
		noteshell /n/$srvname/$attach
		echo noteshell ended
	}
	exit ''
}

if (! test -e /srv/$srvname){
	create = yes
	echo creating hubfs /srv/$srvname
	if (! ~ $trunc yes)
		hubfs -s $srvname
	if (~ $trunc yes)
		hubfs -t -s $srvname
}

mount -c /srv/$srvname /n/$srvname
if (! test -e /n/$srvname/$attach'0'){
	if(! test -e /n/$srvname/ctl){
		touch /n/$srvname/ctl
	}
	touch /n/$srvname/$attach'0'
	touch /n/$srvname/$attach'1'
	touch /n/$srvname/$attach'2'
	touch /n/$srvname/$attach^0.note
#	rfork
#	echo created /$srvname/$attach hubgroup and starting initial rc
	oldprompt = $prompt
	prompt =($attach'% ')
	rc -i </n/$srvname/$attach'0' >/n/$srvname/$attach'1' >[2]/n/$srvname/$attach'2' &
	cat /n/$srvname/$attach^0.note >/proc/$apid/notepg &
#	prompt = $oldprompt
#	rfork
	sleep 1
}
if(! ~ $background yes){
#	echo attaching noteshell to $srvname/$attach hubgroup
	noteshell /n/$srvname/$attach
	echo noteshell ended
}
rfork e
prompt = $oldprompt
exit ''
